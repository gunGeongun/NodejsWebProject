<!-- views/courses/index.ejs -->

<main class="">
  <div class="container col-xl-10 col-xxl-8">
    <div class="pt-3 pb-5">
      <div class="fading"></div>
      <h1>Courses</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
        </thead>
        <tbody>
          <% courses.forEach(course => { %>
          <tr>
            <td>
              <a href="<%= `/courses/${course._id}` %>">
                <%= course.title %>
              </a>
            </td>
            <td><%= course.description %></td>
            <td>
              <a
                class="btn btn-sm btn-outline-primary"
                role="button"
                href="<%=`courses/${course._id}/edit`%>"
              >
                ‚úèÔ∏è Edit
              </a>
            </td>
            <td>
              <a
                class="btn btn-sm btn-outline-danger"
                role="button"
                href="<%= `courses/${course._id}/delete?_method=DELETE` %>"
                onclick="return confirm('Are you sure you want to delete this record?')"
                a
                >üóëÔ∏è Delete</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <div class="mt-5 text-center">
        <a href="/courses/new" class="btn btn-primary">Add New Course</a>
        <a
          href="/courses/deleteAll?_method=DELETE"
          class="btn ut-red"
          role="button"
          >Delete All Courses</a
        >
      </div>
    </div>
  </div>
</main>
